<Window x:Class="WPF_Button.Command"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Button"
        mc:Ignorable="d"
        Title="Command" Height="300" Width="300" SizeToContent="WidthAndHeight"
        x:Name="window">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
        <Button Command="{Binding ElementName=window, Path=CustomCommand}" Content="使用Command属性的按钮"/>
    </StackPanel>
</Window>
