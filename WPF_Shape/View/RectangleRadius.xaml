<Window x:Class="WPF_Shape.View.RectangleRadius"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Shape.View"
        mc:Ignorable="d"
        Title="RectangleRadius" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="RadiusX=0 RadiusY=0"/>
        <Rectangle Stroke="Blue" Fill="Yellow" Height="50" Width="100"/>
        <TextBlock Text="RadiusX=5 RadiusY=5"/>
        <Rectangle Stroke="Blue" Fill="Yellow" Height="50" Width="100" RadiusX="5" RadiusY="5"/>
        <TextBlock Text="RadiusX=10 RadiusY=10"/>
        <Rectangle Stroke="Blue" Fill="Yellow" Height="50" Width="100" RadiusX="10" RadiusY="10"/>
        <TextBlock Text="RadiusX=10 RadiusY=25"/>
        <Rectangle Stroke="Blue" Fill="Yellow" Height="50" Width="100" RadiusX="10" RadiusY="25"/>
        <TextBlock Text="RadiusX=100 RadiusY=60"/>
        <Rectangle Stroke="Blue" Fill="Yellow" Height="50" Width="100" RadiusX="100" RadiusY="60"/>
    </StackPanel>
</Window>
