<Window x:Class="WPF_Shape.View.Opacity"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Shape.View"
        mc:Ignorable="d"
        Title="Opacity" Height="450" Width="800">
    <Viewbox Stretch="Fill">
        <Canvas Width="800" Height="450">
            <Rectangle Canvas.Left="100" Canvas.Top="100" Stroke="Blue" Fill="Yellow" Width="20" Height="10" Opacity="0.3"/>
            <Rectangle Canvas.Left="100" Canvas.Top="200" Stroke="Blue" Width="20" Height="10">
                <Rectangle.Fill>
                    <SolidColorBrush Opacity="0.2" Color="Yellow"/>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle Canvas.Left="100" Canvas.Top="200" Stroke="Blue" Width="20" Height="10">
                <Rectangle.Fill>
                    <SolidColorBrush Color="#33FFFF00"/>
                </Rectangle.Fill>
            </Rectangle>
        </Canvas>
    </Viewbox>
</Window>
