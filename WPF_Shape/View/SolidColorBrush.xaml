<Window x:Class="WPF_Shape.View.SolidColorBrush"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Shape.View"
        mc:Ignorable="d"
        Title="SolidColorBrush" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <!--Stroke和Fill使用的是SolidColorBrush-->
        <Rectangle Grid.Row="0" Stroke="Blue" Fill="Yellow" Width="100" Height="50"/>
        <Button x:Name="button1" Grid.Row="1" Content="按钮"/>
    </Grid>
</Window>
