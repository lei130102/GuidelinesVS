<Window x:Class="WPF_Shape.View.ShapeInCanvas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Shape.View"
        mc:Ignorable="d"
        Title="ShapeInCanvas" Height="450" Width="800">
    <Canvas>
    <!--注意标签顺序，决定了叠加顺序-->
        <Ellipse Canvas.Left="100" Canvas.Top="50" Stroke="Blue" Fill="Yellow" Width="100" Height="50"/>
        <Rectangle Canvas.Left="30" Canvas.Top="40" Stroke="Blue" Fill="Yellow" Width="100" Height="50"/>
    </Canvas>
</Window>
