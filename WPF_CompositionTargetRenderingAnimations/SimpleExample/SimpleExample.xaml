<Page x:Class="WPF_CompositionTargetRenderingAnimations.SimpleExample.SimpleExample"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_CompositionTargetRenderingAnimations.SimpleExample"
      mc:Ignorable="d" >
    <StackPanel>
        <Rectangle Width="50" Height="50">
            <Rectangle.Fill>
                <SolidColorBrush x:Name="animatedBrush"/>
            </Rectangle.Fill>
        </Rectangle>
    </StackPanel>
</Page>
