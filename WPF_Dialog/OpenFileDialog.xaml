<Window x:Class="WPF_Dialog.OpenFileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Dialog"
        mc:Ignorable="d"
        Title="OpenFileDialog" Height="300" Width="300">
    <StackPanel>
        <Button Name="btnOpenFile" HorizontalAlignment="Center" Content="Open file" Click="btnOpenFile_Click"/>
        <TextBox Name="txtOpenFile"/>
    </StackPanel>
</Window>
