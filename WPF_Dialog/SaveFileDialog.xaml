<Window x:Class="WPF_Dialog.SaveFileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Dialog"
        mc:Ignorable="d"
        Title="SaveFileDialog" Height="300" Width="300">
    <StackPanel>
        <Button HorizontalAlignment="Center" Name="btnSaveFile" Click="btnSaveFile_Click" Content="Save file"/>
        <TextBox Name="txtSaveFile" TextWrapping="Wrap" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
    </StackPanel>
</Window>
