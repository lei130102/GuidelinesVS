<Window x:Class="WPF_Animation.CodeAnimation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Animation"
        mc:Ignorable="d"
        Title="CodeAnimation" Height="369" Width="454">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Name="cmdGrow" Padding="10" Height="40" Width="160" HorizontalAlignment="Center" VerticalAlignment="Center" Click="cmdGrow_Click" Content="Click and Make Me Grow"/>

        <Button Name="cmdShrink" Grid.Row="1" Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center" Click="cmdShrink_Click" Content="Shrink It Back"/>

        <Button Name="cmdGrowIncrementally" Grid.Row="2" Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center" Width="240" Click="cmdGrowIncrementally_Click" Content="Click and Make Me Grow (Incrementally)"/>

    </Grid>
</Window>
