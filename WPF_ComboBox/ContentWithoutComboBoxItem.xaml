<Window x:Class="WPF_ComboBox.ContentWithoutComboBoxItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_ComboBox"
        mc:Ignorable="d"
        Title="ContentWithoutComboBoxItem" Height="300" Width="300">
    <StackPanel>
        <ComboBox Margin="5">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Image/happyface.jpg" Width="30" Height="30"/>
                <Label VerticalContentAlignment="Center" Content="A happy face"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Image Source="/Image/redx.jpg" Width="30" Height="30"/>
                <Label VerticalContentAlignment="Center" Content="A warning sign"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Image Source="/Image/happyface.jpg" Width="30" Height="30"/>
                <Label VerticalContentAlignment="Center" Content="A happy face"/>
            </StackPanel>
        </ComboBox>
    </StackPanel>
</Window>
