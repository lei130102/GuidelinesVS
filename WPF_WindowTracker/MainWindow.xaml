<Window x:Class="WPF_WindowTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_WindowTracker"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <StackPanel>
        <Button Name="cmdCreate" Margin="10,10,10,5" Click="cmdCreate_Click" Content="Click to Create a Document"/>
        <Button Name="cmdUpdate" Margin="10,5,10,10" Click="cmdUpdate_Click" Content="Click to Refresh the Documents"/>
    </StackPanel>
</Window>
