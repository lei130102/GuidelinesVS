<Window x:Class="WPF_Layout.LayoutDockPanelLastChildNotFill"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Layout"
        mc:Ignorable="d"
        Title="LayoutDockPanelLastChildNotFill" Height="450" Width="800">
    <!--如果不想最后那个停靠会填满剩余的区域，就把DockPanel属性LastChildFill设置为false，还必须为最后一个子元素显式指定停靠方向-->
    <DockPanel LastChildFill="False">
        <Button x:Name="button" Content="按钮1"/>
        <Button x:Name="button1" Content="按钮2" DockPanel.Dock="Top"/>
        <Button x:Name="button2" Content="按钮3" DockPanel.Dock="Right"/>
        <Button x:Name="button3" Content="按钮4" DockPanel.Dock="Bottom"/>
    </DockPanel>
</Window>
